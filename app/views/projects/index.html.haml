%ul
- @projects.each do |project|
  %li
    %h2= link_to project.title, project.url
    = image_tag(project.image.url) if project.image?
    %p= project.description
    - if current_user
      %ul
        %li= link_to 'Edit Project', edit_project_path(project)
        %li= link_to 'Destroy Project', project, :confirm => 'Are you sure?', :method => :delete

- if current_user
  = link_to 'New Project', new_project_path